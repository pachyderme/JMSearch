<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JMSearch</title>
    <style>
        *, html {
            font-family: 'Showcard Gothic';
            overflow-x: hidden;
        }

        input[type="text"], input[type="search"], input[type="password"] {
            width: 350px;
            height: 30px;
        }

        .center {
            text-align: center;
            margin-top: 45vh;
            transform: translateY(-50%);
        }

        img {
            display: inline-block;
            vertical-align: middle;
        }

        form {
            text-align: center;
        }

        a {
            text-decoration: none;
        }

        @@-webkit-keyframes rotating {
            from {
                -webkit-transform: rotate(0deg);
            }

            to {
                -webkit-transform: rotate(360deg);
            }
        }

        .JMHelp {
            -webkit-animation: rotating 2s linear infinite;
        }

        @@-webkit-keyframes rotatingI {
            from {
                -webkit-transform: rotate(0deg);
            }

            to {
                -webkit-transform: rotate(-360deg);
            }
        }

        @@-webkit-keyframes run {
            0% {
                left: -1%;
            }

            70% {
                left: 71%;
            }

            100% {
                left: 101%;
            }
        }

        #jmContainer {
            margin-bottom: 70px;
        }

        .JMHelpI {
            position: absolute;
            -webkit-animation: run 3s infinite;
        }
    </style>
</head>
<body>
    <div>
        @if (Model.DisplayLogInActions)
        {
            <div style="position:absolute; top:1em; right:1em;">
                @if (Model.IsConnected)
                {
                    <a asp-route-disconnect="true" style="vertical-align:middle;">Se déconnecter</a>
                    <a asp-page="Account" style="vertical-align:middle;">JM+</a>
                }
                else
                {
                    <a asp-page="Login" style="vertical-align:middle;">JM+</a>
                }
                <img src="~/images/logo.png" style="width:50px;" />
            </div>
        }

        @RenderBody()
    </div>
    @if (ViewData["JMHelp"] != null)
    {
        <script>
            var player = document.querySelector('#audioPlayer');
           

            var myVar = setInterval(myTimer, 2000);

            function myTimer() {
                player.play();
            }
        </script>
    }
</body>
</html>
